<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/projeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRUD Completo"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnCriarPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projeto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Criar Pessoa"/>
    <TextView
        android:id="@+id/txtContadorPessoas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/projeto"
        android:layout_alignRight="@+id/projeto"
        android:layout_marginTop="38dp"
        android:text="Numero de Pessoas" />

    <ScrollView
        android:id="@+id/scrollViewPessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCriarPessoa"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:background="#a1a9ca">

        <LinearLayout
            android:id="@+id/objectosPessoas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        </LinearLayout>
    </ScrollView>

</RelativeLayout>